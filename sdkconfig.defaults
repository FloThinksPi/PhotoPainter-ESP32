# ESP-IDF Configuration for PhotoFrame High-Performance I2C
# Optimized for maximum I2C throughput and performance

# WiFi Configuration
CONFIG_ESP32_WIFI_ENABLED=y
CONFIG_ESP32_WIFI_SW_COEXIST_ENABLE=y

# I2C Configuration - HIGH PERFORMANCE
CONFIG_I2C_MASTER_ISR_IN_IRAM=y
CONFIG_I2C_ENABLE_DEBUG_LOG=n

# HTTP Client
CONFIG_ESP_HTTP_CLIENT_ENABLE_HTTPS=y

# Memory Configuration - OPTIMIZED FOR LARGE BUFFERS
CONFIG_ESP32_SPIRAM_SUPPORT=n
CONFIG_HEAP_CAPS_USE_DEV_MEM=y

# Task Configuration
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192
CONFIG_FREERTOS_HZ=1000

# Logging Configuration
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_DEFAULT_LEVEL=3

# Network Configuration
CONFIG_LWIP_MAX_SOCKETS=10
CONFIG_LWIP_SO_REUSE=y

# Performance Optimizations
CONFIG_ESP32_DEFAULT_CPU_FREQ_240=y
CONFIG_ESP32_DEFAULT_CPU_FREQ_MHZ=240

# WiFi Performance
CONFIG_ESP32_WIFI_DYNAMIC_RX_BUFFER_NUM=32
CONFIG_ESP32_WIFI_DYNAMIC_TX_BUFFER_NUM=32

# I2C Driver Performance Settings
CONFIG_I2C_ISR_IN_IRAM=y
